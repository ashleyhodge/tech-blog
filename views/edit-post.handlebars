<article class="my-5">
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2 class="mt-5">
    Edit Post
  </h2>
  <div class="container">
    <div class="card mx-auto" style="width: 500px;">
      <div class="card-body mx-auto">
        <form class="edit-post-form px-5">
            <label for="post-title">Title</label>
            <input class="form-control" name="post-title" type="text" value="{{post.title}}" />
            <label for="post-text">Post</label>
            <input class="form-control " name="post-text" type="text" value="{{post.post_text}}" />
          </div>
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
          </div>
          <button class="btn btn-primary" type="submit">Save post</button>
          <button type="button" class="delete-post-btn btn btn-secondary">Delete post</button>
        </form>
      </div>
    </div>
  </div>
</article>

<form class="comment-form mb-5">
  <div class="container">
    <div class="card mx-auto" style="width: 500px;">
      <div class="card-body mx-auto">
        <label for="comment-text">Comment</label>
        <textarea class="form-control" name="comment-body"></textarea>
      </div>
    </div>
  </div>
  <div>
    <button class="btn btn-primary" type="submit">add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>