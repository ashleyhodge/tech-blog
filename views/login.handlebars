<div class="container">
<div class="card my-5 mx-auto" style="width: 500px;" >
<div class="card-body mx-auto">
  <h4 class="card-title mt-3 text-center">login</h4>
  <form class="login-form">
    <div>
      <label for="username-login">username:</label>
      <input class="form-control" type="text" id="username-login" />
    </div>
    <div>
      <label for="password-login">password:</label>
      <input class="form-control" type="password" id="password-login" />
    </div>
    <div>
      <button class="btn btn-primary btn-block" type="submit">login</button>
    </div>
  </form>
</div>
<div class="card-body mx-auto">
  <h4 class="card-title mt-3 text-center">sign up</h4>
  <form class="signup-form">
    <div>
      <label for="username-signup">username:</label>
      <input class="form-control" type="text" id="username-signup" />
    </div>
    <div>
      <label for="password-signup">password:</label>
      <input class="form-control" type="password" id="password-signup" />
    </div>
    <div>
      <button class="btn btn-primary btn-block" type="submit">sign up</button>
    </div>
  </form>
</div>  
</div>
</div>
<script src="/javascript/login.js"></script>